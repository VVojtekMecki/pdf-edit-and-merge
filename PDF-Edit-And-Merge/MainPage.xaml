<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDF_Edit_And_Merge.MainPage"
             xmlns:viewModel="clr-namespace:PDF_Edit_And_Merge.ViewModel"
             xmlns:model="clr-namespace:PDF_Edit_And_Merge.Model"
             x:DataType="viewModel:MainPageViewModel">

    <ScrollView>
        <VerticalStackLayout Padding="30,0"
                             Spacing="25">
            <Grid RowDefinitions="50, *"
                  Margin="0, 100">
                <Button x:Name="FilePicker"
                        Text="Add a file"
                        Command="{Binding AddPdfFileCommand}"
                        WidthRequest="100"/>

                <ListView x:Name="FileList"
                    ItemsSource="{Binding FileList}"
                          Grid.Row="1">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="{x:Type model:FileItem}">
                            <!--<TextCell Text="{Binding Source={RelativeSource AncestorType={x:Type model:FileItem}}, Path=Name}"/>-->
                            <TextCell Text="{Binding Name}" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
